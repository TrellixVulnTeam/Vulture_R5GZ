<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hone.vulture.mainMenuActivity">

    <TextView
        android:text="Have you connected?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/connection_identifier"
        android:textColor="@android:color/holo_red_dark" />

    <Button
        android:text="Host a Private Game"
        android:layout_width="400dp"
        android:layout_height="75dp"
        android:layout_below="@+id/quick_button"
        android:layout_alignRight="@+id/quick_button"
        android:layout_alignEnd="@+id/quick_button"
        android:layout_marginTop="25dp"
        android:id="@+id/host_button"
        style="@android:style/Widget.DeviceDefault.Button.Inset"
        android:textColor="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color"
        android:fadingEdge="horizontal|vertical"
        android:transformPivotY="20dp"
        android:textSize="20sp" />

    <Button
        android:text="Check Invites"
        android:layout_width="400dp"
        android:layout_height="75dp"
        android:layout_marginTop="25dp"
        android:id="@+id/check_invites_button"
        android:layout_below="@+id/host_button"
        android:layout_alignLeft="@+id/host_button"
        android:layout_alignStart="@+id/host_button"
        style="@android:style/Widget.DeviceDefault.Button.Inset"
        android:textColor="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color"
        android:fadingEdge="horizontal|vertical"
        android:textSize="20sp" />

    <TextView
        android:text="Vulture"
        android:layout_width="200dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/logo_text"
        android:textAppearance="@android:style/TextAppearance.Theme"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color"
        android:textSize="35sp"
        android:textStyle="normal|bold"
        android:typeface="normal"
        android:layout_height="40dp"
        android:layout_above="@+id/quick_button"
        android:layout_marginBottom="20dp" />

    <Button
        android:text="Play a Quick Game"
        android:id="@+id/quick_button"
        android:layout_height="75dp"
        android:layout_width="400dp"
        style="@android:style/Widget.DeviceDefault.Button.Inset"
        android:elevation="0dp"
        android:textColor="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color"
        android:fadingEdge="horizontal|vertical"
        android:textSize="20sp"
        android:layout_marginTop="182dp"
        android:layout_below="@+id/connection_identifier"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
